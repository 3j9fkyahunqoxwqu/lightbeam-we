{
    "env": {
        "browser": true,
        "es6": true
    },
    "globals": {
        "browser": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
         "ecmaVersion": "2017"
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "prefer-const": [
            "error"
        ],
        "prefer-template": [
            "error"
        ],
        "require-await": [
            "error"
        ],
        "semi": [
            "error",
            "always"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "no-trailing-spaces": [
            "error"
        ]
    }
}
